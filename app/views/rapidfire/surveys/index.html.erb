<div class="container content-wrapper">

  <div class="content">
    
    <%#= image_tag 'top-panel.png' %>
    
    <div class="content-body">
      <div class="survey-heading">
        <h4>Your surveys</h4>
        <%= image_tag 'survey-icon', id:"survey-icon"%>
      </div>
      
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link d-none active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Current</a>
        </li>
        <li class="nav-item">
          <a class="nav-link d-none" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Past</a>
        </li>
      </ul>

      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <table class="custom-table">
            <thead>
              <tr class="border-bottom">
                <th class="pl-2">Survey</th>
                <th>Actions</th>
                <th>Closing date</th>
                <%# <th colspan="3"></th> %>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "survey", collection: @surveys %>
            </tbody>
          </table>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">Completed</div>
      </div>


      <% if defined?(Kaminari) %>
        <%= paginate @surveys %>
      <% end %>
      <br>
      
    </div>

  </div>
  
</div>
